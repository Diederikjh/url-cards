rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Cards collection - users can only access their own cards
    match /cards/{cardId} {
      // Allow read if user is authenticated and card belongs to them
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;

      // Allow create if user is authenticated and userId matches auth
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Allow update/delete if user is authenticated and card belongs to them
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
