rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Boards collection - users can only access their own boards, or public boards
    match /boards/{boardId} {
      // Allow read if user is authenticated and board belongs to them
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;

      // Allow read if board is public (for unauthenticated users)
      allow read: if resource.data.isPublic == true;

      // Allow create if user is authenticated and userId matches auth
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Allow update/delete if user is authenticated and board belongs to them
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Cards collection - users can access their own cards, or cards in public boards
    match /cards/{cardId} {
      // Allow read if user is authenticated and card belongs to them
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;

      // Allow read if card belongs to a public board
      allow read: if get(/databases/$(database)/documents/boards/$(resource.data.boardId)).data.isPublic == true;

      // Allow create if user is authenticated and userId matches auth
      allow create: if request.auth != null &&
                       request.auth.uid == request.resource.data.userId &&
                       request.resource.data.boardId != null;

      // Allow update/delete if user is authenticated and card belongs to them
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
